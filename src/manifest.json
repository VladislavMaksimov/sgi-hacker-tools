{
  "manifest_version": 3,
  "name": "SGi Hacker Tools",
  "version": "1.0.0",
  "description": "Улучшает интерфейс small-games.info",
  "content_scripts": [
    {
      "matches": ["https://small-games.info/*"],
      "js": ["scripts.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "tooltip.svg",
        "user-block.svg",
        "user-block-hover.svg",
        "user-hide.svg",
        "user-hide-hover.svg",
        "user-unhide.svg",
        "user-unhide-hover.svg",
        "user-unblock.svg",
        "user-unblock-hover.svg",
        "minus.svg",
        "telegram.svg",
        "vk.svg",
        "github.svg"
      ],
      "matches": [
        "https://small-games.info/*"
      ]
    }
  ]
}