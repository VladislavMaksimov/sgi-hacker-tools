{
  "manifest_version": 3,
  "name": "SGi Hacker Tools",
  "version": "1.0.0",
  "description": "Улучшает интерфейс small-games.info",
  "content_scripts": [
    {
      "matches": ["https://small-games.info/*"],
      "js": ["scripts.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "tooltip.svg",
        "user-ban.svg",
        "user-ban-hover.svg",
        "user-hide.svg",
        "user-hide-hover.svg"
      ],
      "matches": [
        "https://small-games.info/*"
      ]
    }
  ]
}